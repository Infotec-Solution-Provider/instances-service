// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  login    String @unique
  password String

  @@map("users")
}

model Instance {
  name       String      @id @unique
  server     Server?
  parameters Parameters?

  @@map("clients")
}

model Server {
  instance_name String   @id @unique @map("instance_name")
  host          String
  port          Int
  username      String
  password      String
  database      String
  client        Instance @relation(fields: [instance_name], references: [name])

  @@map("clients_servers")
}

model Parameters {
  client_name String   @id @unique
  parameters  Json
  client      Instance @relation(fields: [client_name], references: [name])

  @@map("clients_parameters")
}
